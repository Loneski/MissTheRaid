{% extends '::base.html.twig' %}

{% block body -%}
{% include 'MissTheRaidCharacterBundle:Character:character-header.html.twig' %}
<div class="container">
    <h1 class="col-md-offset-3">Looks like you need to fix...</h1>
    <div class="row">
        <div class="col-md-offset-3 col-md-3">
            {% if equip|length > 0 %}
                <p class="lead">Equip:</p>
                <ul>
                {% for piece in equip %}
                    <li>{{ piece }}</li>
                {% endfor %}
                </ul>
            {% endif %}
            {% if remove|length > 0 %}
                <p class="lead">Unequip:</p>
                <ul>
                {% for piece in remove %}
                    <li>{{ piece }}</li>
                {% endfor %}
                </ul>
            {% endif %}
        </div>
        <div class="col-md-3">
            <p class="lead">Once that's done:</p>
            <a href="{{ app.request.uri }}" class="btn btn-primary btn-block">Try again</a>
        </div>
    </div>
</div>
{% endblock %}
